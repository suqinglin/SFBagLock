<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/apptitlebar_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_title_back" />

        <TextView
            android:id="@+id/apptitlebar_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/apptitlebar_ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/apptitlebar_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/apptitlebar_btn_right"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_title_next" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
</LinearLayout>
