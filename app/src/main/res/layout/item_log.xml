<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_device_item_container"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_log_item_time"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="19-05-24 15:43:00"/>

    <TextView
        android:id="@+id/tv_log_item_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_log_item_time"
        android:layout_marginLeft="12dp"
        android:text="开门成功"/>

    <TextView
        android:id="@+id/tv_log_item_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="3V"/>
</RelativeLayout>